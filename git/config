[user]
	name = Izzy Muerte
	email = 63051+bruxisma@users.noreply.github.com
[init]
  defaultBranch = main
[push]
  default = simple
[log]
  date = iso
[color]
  ui = auto
[core]
  fsmonitor = true
  autocrlf = input
  editor = nvim
  pager = delta --diff-so-fancy
[pager]
  reflog = delta
  diff = delta
  show = delta
  log = delta
[fetch]
  prune = true
  pruneTags = true
[rebase]
  autosquash = true
[format]
  pretty = %C(red)%h%C(reset)  %C(bold blue)%an%C(reset): %C(white)%s%C(reset) %C(dim white) %C(bold green)(%ar)%C(reset) %C(bold yellow)%d%C(reset)
[merge]
  tool = gvimdiff
  conflictstyle = diff3
  prompt = false
[diff]
  colormoved = default
[alias]
  aliases = !git config --global --get-regexp '^alias[.]' | rg -e '^alias[.](\\w+) ' -r '$1 \t=> $2' | column -t -s '\t'
  amend = commit --amend
  bash = "!bash"
  branches = branch -a
  commits = log --graph --decorate --pretty=oneline --abbrev-commit
  fixup = commit --fixup
  purge = !git branch -vv | rg --trim '(\\S+).*: gone].*' -r '$1' | xargs -r git branch -D
  remotes = remote -v
  squash = commit --squash 
  st = status
  stat = status
  tags = tag
  undo = reset --soft HEAD~1
[delta]
  syntax-theme = OneHalfDark
  line-numbers = true
  side-by-side = true
[include]
  path = machine
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
